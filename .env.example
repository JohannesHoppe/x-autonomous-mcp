# X (Twitter) API Credentials
# Get these from https://developer.x.com/en/portal/dashboard

# OAuth 1.0a (required for write operations: posting, liking, retweeting)
X_API_KEY=your_api_key_here
X_API_SECRET=your_api_secret_here
X_ACCESS_TOKEN=your_access_token_here
X_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# OAuth 2.0 Bearer Token (used for read operations: search, lookup)
X_BEARER_TOKEN=your_bearer_token_here

# --- Safety features (all optional) ---

# Daily budget limits. Set to 0 to disable an action, -1 for unlimited.
# X_MCP_MAX_REPLIES=8
# X_MCP_MAX_ORIGINALS=2
# X_MCP_MAX_LIKES=20
# X_MCP_MAX_RETWEETS=5
# X_MCP_MAX_FOLLOWS=10
# X_MCP_MAX_UNFOLLOWS=10
# X_MCP_MAX_DELETES=5

# Compact responses — strip verbose fields to save tokens. Default: true
# X_MCP_COMPACT=true

# TOON encoding — responses in Token-Oriented Object Notation instead of JSON. Default: true
# Set to "false" to get non-pretty JSON instead.
# X_MCP_TOON=true

# Engagement deduplication — prevent duplicate likes/replies/retweets/follows. Default: true
# X_MCP_DEDUP=true

# Protected accounts — comma-separated usernames that cannot be unfollowed.
# Checked by unfollow_user, cleanup_non_followers, and follow_cycle cleanup.
# X_MCP_PROTECTED_ACCOUNTS=friend1,friend2,@mentor

# Max active workflows. Default: 200
# X_MCP_MAX_WORKFLOWS=200

# State file path. Default: {cwd}/x-mcp-state.json
# For multi-agent setups, set a unique path per agent.
# X_MCP_STATE_FILE=/path/to/state.json
