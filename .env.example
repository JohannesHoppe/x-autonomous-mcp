# X (Twitter) API Credentials
# Get these from https://developer.x.com/en/portal/dashboard

# OAuth 1.0a (required for write operations: posting, liking, retweeting)
X_API_KEY=your_api_key_here
X_API_SECRET=your_api_secret_here
X_ACCESS_TOKEN=your_access_token_here
X_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# OAuth 2.0 Bearer Token (used for read operations: search, lookup)
X_BEARER_TOKEN=your_bearer_token_here

# --- Safety features (all optional) ---

# Daily budget limits. Set to 0 to disable an action, -1 for unlimited.
# X_MCP_MAX_REPLIES=8
# X_MCP_MAX_ORIGINALS=2
# X_MCP_MAX_LIKES=20
# X_MCP_MAX_RETWEETS=5

# Compact responses — strip verbose fields, ~80% fewer tokens. Default: true
# X_MCP_COMPACT=true

# Engagement deduplication — prevent duplicate likes/replies/retweets. Default: true
# X_MCP_DEDUP=true

# Destructive tools (delete_tweet) — disabled by default for safety.
# Set to "true" to enable. When disabled, the tool is completely hidden from LLMs.
# X_MCP_ENABLE_DANGEROUS=true

# State file path. Default: {cwd}/x-mcp-state.json
# For multi-agent setups, set a unique path per agent.
# X_MCP_STATE_FILE=/path/to/state.json
